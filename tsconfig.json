{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ]
}
